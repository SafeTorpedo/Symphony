{
    "manifest_version": 3,
    "name": "Symphony",
    "version": "1.0",
    "description": "Symphony is a dyslexic friendly browser extension that helps you read efficiently.",
  
    "icons": {
        "16": "icons/icon-16.jpg",
        "32": "icons/icon-32.jpg",
        "48": "icons/icon-48.jpg",
        "128": "icons/icon-128.jpg"
    },

    "action": {
        "default_popup": "popup.html"
      },

      "host_permissions": [
        "https://*/*",
        "http://*/*"
      ],

      "permissions": [
        "scripting",
        "activeTab",
        "storage"
        
      ],

      "background": {
        "service_worker": "background.js"
      },

      "content_scripts": [
        {
          "matches": ["https://*/*"],
          "js": ["content-script.js"]
        }
      ]
  }