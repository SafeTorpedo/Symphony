{
    "manifest_version": 3,
    "name": "Symphony",
    "version": "1.0",
    "description": "Font manager for dyslexic people",
  
    "icons": {
      "16": "images/icon.jpg",
      "32": "images/icon.jpg",
      "48": "images/icon.jpg",
      "128": "images/icon.jpg"
    },

    "action": {
        "default_popup": "popup.html"
      },

      "host_permissions": [
        "https://*/*",
        "http://*/*"
      ],

      "permissions": [
        "scripting",
        "activeTab"
        
      ],

      "background": {
        "service_worker": "background.js"
      },

      "content_scripts": [
        {
          "matches": ["https://*/*"],
          "js": ["content-script.js"]
        }
      ]
  }